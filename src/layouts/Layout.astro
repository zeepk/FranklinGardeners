---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="Franklin Gardeners Association" />
    <meta property="og:site_name" content="Franklin Gardeners Association" />
    <meta
      property="og:description"
      content="Franklin Gardeners Association - We Just Keep Growing!"
    />
  </head>
  <body>
    <div class="relative max-w-screen overflow-x-hidden min-h-screen">
      <Header />
      <slot />
      <div class="absolute bottom-0">
        <Footer />
      </div>
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Rubik&display=swap");
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, #93ff7d, #c3de83 30%);
    background-color: #b9cfc0;
    font-family: "Rubik", sans-serif;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
